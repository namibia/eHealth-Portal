<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ehealthportal/models/rules"
	addfieldpath="/administrator/components/com_ehealthportal/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_CREATED_DATE_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_CREATED_BY_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_MODIFIED_DATE_LABEL" description="COM_EHEALTHPORTAL_ANTENATAL_CARE_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_MODIFIED_BY_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Access Field. Type: Accesslevel (joomla) -->
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			required="false"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_VERSION_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Was added due to Permissions JS needing a Title field -->
		<!-- Let us know at gh-629 should this change -->
		<!-- https://github.com/vdm-io/Joomla-Component-Builder/issues/629#issuecomment-750117235 -->
		<field
			name="title"
			type="hidden"
			default="ehealthportal antenatal_care"
		/>
		<!-- Dynamic Fields. -->
		<!-- Patient Field. Type: User. (joomla) -->
		<field
			type="user"
			name="patient"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_PATIENT_LABEL"
			required="true"
		/>
		<!-- Foetal_lie Field. Type: Foetallie. (custom) -->
		<field
			type="foetallie"
			name="foetal_lie"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_LIE_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_LIE_DESCRIPTION"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Foetal_presentation Field. Type: Foetalpresentation. (custom) -->
		<field
			type="foetalpresentation"
			name="foetal_presentation"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_PRESENTATION_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_PRESENTATION_DESCRIPTION"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Foetal_engagement Field. Type: Foetalengagement. (custom) -->
		<field
			type="foetalengagement"
			name="foetal_engagement"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_ENGAGEMENT_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_ENGAGEMENT_DESCRIPTION"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Foetal_heart_rate Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="foetal_heart_rate"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_HEART_RATE_LABEL"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_HEART_RATE_DESCRIPTION"
			class="text_area"
			min="1"
			max="300"
			step="1"
		/>
		<!-- Foetal_movements Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="foetal_movements"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_MOVEMENTS_LABEL"
			rows="11"
			cols="10"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_MOVEMENTS_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTHPORTAL_ANTENATAL_CARE_FOETAL_MOVEMENTS_HINT"
		/>
		<!-- Guid Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="guid"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_GUID_LABEL"
			size="40"
			maxlength="40"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_GUID_DESCRIPTION"
			class="text_area"
			readonly="true"
			filter="CMD"
			validate="guid"
			hint="COM_EHEALTHPORTAL_ANTENATAL_CARE_GUID_HINT"
		/>
		<!-- Caesarean_sections Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="caesarean_sections"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_CAESAREAN_SECTIONS_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
		<!-- Last_menstrual_period Field. Type: Calendar. (joomla) -->
		<field
			type="calendar"
			name="last_menstrual_period"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_LAST_MENSTRUAL_PERIOD_LABEL"
			default="NOW"
			description="COM_EHEALTHPORTAL_ANTENATAL_CARE_LAST_MENSTRUAL_PERIOD_DESCRIPTION"
			format="%d-%m-%Y"
		/>
		<!-- Normal_births Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="normal_births"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_NORMAL_BIRTHS_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
		<!-- Still_births Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="still_births"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_STILL_BIRTHS_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
		<!-- Miscarriages Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="miscarriages"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_MISCARRIAGES_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
		<!-- Live_births Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="live_births"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_LIVE_BIRTHS_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
		<!-- Pregnancies_excl Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="pregnancies_excl"
			label="COM_EHEALTHPORTAL_ANTENATAL_CARE_PREGNANCIES_EXCL_LABEL"
			class="text_area"
			min="0"
			max="100"
			step="1"
		/>
	</fieldset>

	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this antenatal_care"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_ehealthportal"
			section="antenatal_care"
		/>
	</fieldset>
</form>