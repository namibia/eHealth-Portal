<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ehealth_portal/models/rules"
	addfieldpath="/administrator/components/com_ehealth_portal/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CREATED_DATE_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CREATED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MODIFIED_DATE_LABEL" description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MODIFIED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Access Field. Type: Accesslevel (joomla) -->
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			required="false"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_VERSION_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Was added due to Permissions JS needing a Title field -->
		<!-- Let us know at gh-629 should this change -->
		<!-- https://github.com/vdm-io/Joomla-Component-Builder/issues/629#issuecomment-750117235 -->
		<field
			name="title"
			type="hidden"
			default="ehealth_portal general_medical_check_up"
		/>
		<!-- Dynamic Fields. -->
		<!-- Patient Field. Type: User. (joomla) -->
		<field
			type="user"
			name="patient"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_PATIENT_LABEL"
		/>
		<!-- Bp_diastolic_one Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="bp_diastolic_one"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_DIASTOLIC_ONE_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_DIASTOLIC_ONE_DESCRIPTION"
			class="text_area"
			min="1"
			max="400"
			step="1"
		/>
		<!-- Bp_systolic_one Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="bp_systolic_one"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_SYSTOLIC_ONE_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_SYSTOLIC_ONE_DESCRIPTION"
			class="text_area"
			min="1"
			max="400"
			step="1"
		/>
		<!-- Temp_one Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="temp_one"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_TEMP_ONE_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_TEMP_ONE_DESCRIPTION"
			class="text_area"
			min="0"
			max="150"
			step="0.1"
		/>
		<!-- Weight Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="weight"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_WEIGHT_LABEL"
			class="text_area"
			required="true"
			min="0"
			max="500"
			step="0.1"
		/>
		<!-- Pulse Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="pulse"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_PULSE_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_PULSE_DESCRIPTION"
			class="text_area"
			min="1"
			max="300"
			step="1"
		/>
		<!-- Chronic_medication Field. Type: Checkbox. (joomla) -->
		<field
			type="checkbox"
			name="chronic_medication"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CHRONIC_MEDICATION_LABEL"
			value="1"
			default="0"
			required="false"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_CHRONIC_MEDICATION_DESCRIPTION"
			class="inputbox"
		/>
		<!-- Bp_diastolic_two Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="bp_diastolic_two"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_DIASTOLIC_TWO_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_DIASTOLIC_TWO_DESCRIPTION"
			class="text_area"
			min="1"
			max="400"
			step="1"
		/>
		<!-- Bp_systolic_two Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="bp_systolic_two"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_SYSTOLIC_TWO_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BP_SYSTOLIC_TWO_DESCRIPTION"
			class="text_area"
			min="1"
			max="400"
			step="1"
		/>
		<!-- Temp_two Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="temp_two"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_TEMP_TWO_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_TEMP_TWO_DESCRIPTION"
			class="text_area"
			min="0"
			max="150"
			step="0.1"
		/>
		<!-- Height Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="height"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_HEIGHT_LABEL"
			class="text_area"
			required="true"
			min="0"
			max="10"
			step="0.01"
		/>
		<!-- Bmi Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="bmi"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BMI_LABEL"
			size="10"
			maxlength="20"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_BMI_DESCRIPTION"
			class="text_area"
			readonly="true"
			disabled="false"
			required="false"
			filter="STRING"
		/>
		<!-- Complaint Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="complaint"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_COMPLAINT_LABEL"
			rows="5"
			cols="20"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_COMPLAINT_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_COMPLAINT_HINT"
		/>
		<!-- Investigations Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="investigations"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INVESTIGATIONS_LABEL"
			rows="5"
			cols="20"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INVESTIGATIONS_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INVESTIGATIONS_HINT"
		/>
		<!-- Notes Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="notes"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_NOTES_LABEL"
			rows="5"
			cols="20"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_NOTES_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_NOTES_HINT"
		/>
		<!-- Diagnosis Field. Type: Diagnosis. (custom) -->
		<field
			type="diagnosis"
			name="diagnosis"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_DIAGNOSIS_LABEL"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_DIAGNOSIS_DESCRIPTION"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Referral Field. Type: Referrals. (custom) -->
		<field
			type="referrals"
			name="referral"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_REFERRAL_LABEL"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Reason Field. Type: Textarea. (joomla) -->
		<field
			type="textarea"
			name="reason"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_REASON_LABEL"
			rows="5"
			cols="20"
			description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_REASON_DESCRIPTION"
			class="text_area span12"
			filter="HTML"
			hint="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_REASON_HINT"
		/>
		<!-- Dispensing Field. Type: Subform. (joomla) -->
		<field
			type="subform"
			name="dispensing"
			label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_DISPENSING_LABEL"
			layout="joomla.form.field.subform.repeatable-table"
			multiple="true"
			buttons="add,remove,move"
			icon="list"
			max="50">
			<form hidden="true" name="list_dispensing_modal" repeat="true">
				<!-- Medication Field. Type: Medication. (custom) -->
				<field
					type="medication"
					name="medication"
					label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MEDICATION_LABEL"
					description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_MEDICATION_DESCRIPTION"
					class="list_class"
					multiple="false"
					default="0"
					button="false"
				/>
				<!-- Unit Field. Type: Units. (custom) -->
				<field
					type="units"
					name="unit"
					label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_UNIT_LABEL"
					description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_UNIT_DESCRIPTION"
					class="list_class"
					multiple="false"
					default="0"
					button="false"
				/>
				<!-- Strength Field. Type: Stengths. (custom) -->
				<field
					type="stengths"
					name="strength"
					label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_STRENGTH_LABEL"
					description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_STRENGTH_DESCRIPTION"
					class="list_class"
					multiple="false"
					default="0"
					button="false"
				/>
				<!-- Quantity Field. Type: Number. (joomla) -->
				<field
					type="number"
					name="quantity"
					label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_QUANTITY_LABEL"
					description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_QUANTITY_DESCRIPTION"
					class="text_area"
					required="true"
					min="1"
					max="1000"
					step="1"
				/>
				<!-- Instructions Field. Type: Textarea. (joomla) -->
				<field
					type="textarea"
					name="instructions"
					label="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INSTRUCTIONS_LABEL"
					rows="5"
					cols="20"
					description="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INSTRUCTIONS_DESCRIPTION"
					class="text_area span12"
					filter="HTML"
					hint="COM_EHEALTH_PORTAL_GENERAL_MEDICAL_CHECK_UP_INSTRUCTIONS_HINT"
				/>
			</form>
		</field>
	</fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this general_medical_check_up"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_ehealth_portal"
			section="general_medical_check_up"
		/>
	</fieldset>
</form>