<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ehealth_portal/models/rules"
	addfieldpath="/administrator/components/com_ehealth_portal/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_CREATED_DATE_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_CREATED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_MODIFIED_DATE_LABEL" description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_MODIFIED_BY_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Access Field. Type: Accesslevel (joomla) -->
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			required="false"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_VERSION_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Was added due to Permissions JS needing a Title field -->
		<!-- Let us know at gh-629 should this change -->
		<!-- https://github.com/vdm-io/Joomla-Component-Builder/issues/629#issuecomment-750117235 -->
		<field
			name="title"
			type="hidden"
			default="ehealth_portal health_education"
		/>
		<!-- Dynamic Fields. -->
		<!-- Education_type Field. Type: List. (joomla) -->
		<field
			type="list"
			name="education_type"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_EDUCATION_TYPE_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_EDUCATION_TYPE_DESCRIPTION"
			class="list_class"
			multiple="false"
			required="true"
			default="0">
			<!-- Option Set. -->
			<option value="0">
				COM_EHEALTH_PORTAL_HEALTH_EDUCATION_INDIVIDUAL</option>
			<option value="1">
				COM_EHEALTH_PORTAL_HEALTH_EDUCATION_GROUP</option>
		</field>
		<!-- Health_education_topic Field. Type: Healtheducationtopics. (custom) -->
		<field
			type="healtheducationtopics"
			name="health_education_topic"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_HEALTH_EDUCATION_TOPIC_LABEL"
			description="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_HEALTH_EDUCATION_TOPIC_DESCRIPTION"
			class="list_class"
			multiple="false"
			default="0"
			button="true"
		/>
		<!-- Patient Field. Type: User. (joomla) -->
		<field
			type="user"
			name="patient"
			label="COM_EHEALTH_PORTAL_HEALTH_EDUCATION_PATIENT_LABEL"
		/>
	</fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this health_education"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_ehealth_portal"
			section="health_education"
		/>
	</fieldset>
</form>