			label="COM_EHEALTHPORTAL_TEST_CREATED_DATE_LABEL"
			description="COM_EHEALTHPORTAL_TEST_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_EHEALTHPORTAL_TEST_CREATED_BY_LABEL"
